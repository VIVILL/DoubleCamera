<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_pic"
    tools:context=".HomeActivity" >

    <Button
        android:id="@+id/btn_help"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/help_bg" />
    
    <Button
        android:id="@+id/btn_setting0"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_help"
        android:background="@drawable/btn_setting_bg" />

    <Button
        android:id="@+id/btn_file"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_setting0"
        android:background="@drawable/btn_playback_bg"/>
    <Button
        android:id="@+id/model_socket"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_file"
        android:background="@drawable/model_bg"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" 
        android:orientation="vertical">

        
        
		<Button
	        android:id="@+id/btn_play"
	        android:layout_width="210dp"
	        android:layout_height="65dp"
			android:layout_gravity="center_horizontal"
			android:background="@drawable/btn_start_bg" />
        
    </LinearLayout>
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffbcbcbc"
        android:textSize="12sp"
        android:text="@string/build_time" />
</RelativeLayout>